import random
def generate_random_list():
    # Випадкова кількість елементів від 3 до 10
    list_length = random.randint(3, 10)
    # Створення списку випадкових чисел
    random_list = [random.randint(1, 100) for _ in range(list_length)]
    return random_list
def select_elements(input_list):
    # Створення нового списку з першого, третього і другого з кінця елементів
    if len(input_list) >= 3:
        new_list = [input_list[0], input_list[2], input_list[-2]]
    else:
        new_list = input_list
    return new_list
# Генерація випадкового списку
random_list = generate_random_list()
# Вибір елементів
selected_elements = select_elements(random_list)

print(f"Початковий список: {random_list}")
print(f"Новий список: {selected_elements}")
